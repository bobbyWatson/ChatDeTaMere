<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/colorLayout"
    tools:context="com.example.parlezvousandroid.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/password_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_form"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:imeOptions="actionSend"
		style="@style/colorTxt"
        android:hint="@string/password_form"
        android:inputType="textPassword"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="2"
            style="@style/colorBtnCancel"
            android:text="@string/cancel_btn"/>

        <Button
            android:id="@+id/connect_btn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="@string/connect_btn"
            style="@style/colorBtnValidate"/>

    </LinearLayout>

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="@style/colorHeader"        
        android:text="@string/welcome_title"
		/>

    <Button
        android:id="@+id/inscription_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/welcome_title"
        android:layout_centerHorizontal="true"
        style="@style/colorBtnValidate"
        android:text="@string/inscription_btn" />
    <EditText
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
		style="@style/colorTxt"
        android:hint="@string/login_form"/>

    <TextView
        android:id="@+id/or_txt"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/login_form"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:fontFamily=" "
        android:gravity="center"
        android:text="@string/or_txt"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>