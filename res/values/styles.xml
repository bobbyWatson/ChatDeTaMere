<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="colorHeader">
        <item name="android:background">#F09F03</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
		<item name="android:textColor">#7F6345</item>
		<item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="colorLayout">
        <item name="android:background">#E6C202</item>
    </style>
    <style name="colorBtnValidate">
       <item name="android:background">#D96109</item>
       <item name="android:textColor">#E6C202</item>
       <item name="android:textSize">25sp</item>
       <item name="android:textStyle">bold</item>
   </style>
   <style name="colorBtnCancel">
       <item name="android:background">#F02803</item>
       <item name="android:textColor">#E6C202</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textSize">25sp</item>
   </style>
   
   <style name="colorTxt">
       <item name="android:background">#E6C202</item>

       <item name="android:textColor">#7F6345</item>
       <item name="android:singleLine">true</item>
       <item name="android:imeOptions">actionNext</item>
       <item name="android:textStyle">bold</item>
       <item name="android:gravity">center</item>
       <item name="android:textSize">20sp</item>
   </style>
   
   <style name="backLogin">
       <item name="android:background">#E60056</item>
       <item name="android:textColor">#5E0F0E</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textSize">25sp</item>
   </style>
   
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>